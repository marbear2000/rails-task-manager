<h1>New Task</h1>

<h3>Title</h3>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <h3>Details</h3>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div>
  <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to list', tasks_path%>

