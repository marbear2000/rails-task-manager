<h1>My Tasks</h1>

<ul>

  <% @tasks.each do |task| %>

  <li>
    <h4><%= check_box_tag "display_check", nil, task.completed, disabled: true %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", delete_task_path(task), method: :delete, data: { confirm: "Are you sure?"} %>
    </h4>
  </li>
  <% end %>

  <p><%= link_to "Add a new task", new_task_path %></p>
</ul>
